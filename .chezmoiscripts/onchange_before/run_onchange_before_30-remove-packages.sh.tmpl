#!/bin/bash

set -eufo pipefail


echo -e "\033[0;32m>>>>> Begin Removing Ubuntu Packages <<<<<\033[0m"

{{ $packages := list
     "thunderbird" -}}

{{ $snaps := list "" -}}

{{ $sudo := "sudo " -}}
{{ if eq .chezmoi.username "root" -}}
{{   $sudo = "" -}}
{{ end -}}


{{ $sudo }}apt-get remove -y {{ $packages | join " " }}

{{ $sudo }} apt autoremove -y

{{ if lookPath "snap" }}
{{   range $snaps }}
snap info {{ . }} && {{ $sudo }}snap remove {{ . }}
{{   end }}
{{ end }}

echo -e "\033[0;32m>>>>> Finish Removing Ubuntu Packages <<<<<\033[0m"